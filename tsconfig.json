//Настрой импорты через собаку;

{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@fixtures/*": ["src/fixtures/*"],
      "@page-factory/*": ["src/page-factory/*"],
      "@pages/*": ["src/pages/*"],
      "@requests/*": ["src/requests/*"],
      "@utils/*": ["src/utils/*"],
      "@/*": ["*"]
    }
  },
  "include": ["./src"]
}
